{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
    "allowJs": true,
    "composite": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}